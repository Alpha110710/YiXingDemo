<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y300"
    android:background="@drawable/shape_translucence_line"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/shape_white_fifteen_round"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:src="@drawable/recharge_success_back" />

        <Button
            android:id="@+id/select_red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y35"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/shape_orange_large_round"
            android:text="使用红包"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <ListView
            android:id="@+id/dialog_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/select_red"
            android:layout_below="@id/close"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/white"
            android:divider="@color/circle_gray"
            android:dividerHeight="1dp"
            android:listSelector="@color/white"
            android:scrollbars="none" >
        </ListView>
    </RelativeLayout>

</LinearLayout>