<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_normal_blue" />
    <!-- 邀请好友 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:background="@drawable/invitation_friend_one"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/y25"
                android:text="邀请人数( 位 )"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_invite_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginTop="@dimen/y5"
                android:text="5630"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/y25"
                android:text="邀请奖励( 元 )"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_invite_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y5"
                android:text="500"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y15"
            android:text="分享到"
            android:textColor="@color/font_black"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y5"
            android:background="@color/font_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_two"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="微信好友" />

            <TextView
                android:id="@+id/tv_chat_moments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_three"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="微信朋友圈" />

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_four"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="QQ" />

            <TextView
                android:id="@+id/tv_qq_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_five"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="腾讯微博" 
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y15"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sina_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_six"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="新浪微博" />

            <TextView
                android:id="@+id/tv_short_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_seven"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="手机短信" />

            <TextView
                android:id="@+id/tv_qq_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/y5"
                android:drawableTop="@drawable/invitation_friend_eight"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/y5"
                android:text="QQ空间" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>