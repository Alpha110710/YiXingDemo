<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
         android:paddingTop="@dimen/y5"
        android:paddingBottom="@dimen/y5" >

        <TextView
            android:id="@+id/investment_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="150****1329"
            android:textColor="@color/font_black" />


        <TextView
             android:id="@+id/investment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:text="¥1,000,00.00"
            android:textColor="@color/title_color_blue" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
       android:paddingTop="@dimen/y5"
        android:paddingBottom="@dimen/y5" >

        <TextView
             android:id="@+id/investment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="手动投标" />


        <TextView
             android:id="@+id/investment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:text="16/06/06 12:19:02"
            android:textColor="@color/font_gray" />

    </RelativeLayout>


</LinearLayout>