<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/y10"
     android:paddingBottom="@dimen/y10"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/dialog_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/use_red_packet_check_box"
            android:button="@null"
            android:clickable="false"
            android:enabled="false"
            android:checked="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_je"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额 : "
                    android:textColor="@color/font_black" />

                <TextView
                       android:id="@+id/dialog_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/title_color_orange" />

                <TextView
                    android:id="@+id/money_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:text="元"
                    android:textColor="@color/font_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期 : "
                    android:textColor="@color/font_black" />

                <TextView
                     android:id="@+id/dialog_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/font_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用条件 : "
                    android:textColor="@color/font_black" />

                <TextView
                       android:id="@+id/dialog_use_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/font_black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>