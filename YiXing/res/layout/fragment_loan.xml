<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/title_color_orange" >

        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/my_account1"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y20"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我要借款"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_loan_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:padding="@dimen/x3"
            android:text="借款流程"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望借款金额:" />

                    <EditText
                        android:id="@+id/edt_except_loan_amount"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y20"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_white_background"
                        android:cursorVisible="true"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/x5"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x3"
                        android:layout_weight="1"
                        android:text="元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y10"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望借款利率:" />

                    <EditText
                        android:id="@+id/edt_except_loan_rate"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y20"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_white_background"
                        android:cursorVisible="true"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/x5"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x3"
                        android:layout_weight="1"
                        android:text="%" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10"
                    android:text="借款理由：" />

                <EditText
                    android:id="@+id/edt_except_loan_reason"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/x50"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@drawable/edittext_white_background"
                    android:cursorVisible="true"
                    android:gravity="top"
                    android:maxLength="200"
                    android:paddingLeft="@dimen/x5"
                    android:text=""
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y15"
                    android:text="借款用途：" />

                <EditText
                    android:id="@+id/edt_except_loan_purpose"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/x50"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@drawable/edittext_white_background"
                    android:cursorVisible="true"
                    android:gravity="top"
                    android:maxLength="200"
                    android:paddingLeft="@dimen/x5"
                    android:text=""
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y10"
                    android:layout_marginRight="@dimen/y10"
                    android:layout_marginTop="@dimen/y15"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在城市" />

                    <TextView
                        android:id="@+id/tv_select_province"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/spinner_right"
                        android:text="请选择省" />

                    <TextView
                        android:id="@+id/tv_select_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/spinner_right"
                        android:text="请选择市" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐人手机号码 :" />

                    <EditText
                        android:id="@+id/edt_recommender"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y20"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_white_background"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="@dimen/x5"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x3"
                        android:layout_weight="1"
                        android:text="元"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校验码 :" />

                    <EditText
                        android:id="@+id/edt_verify_code_loan"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y20"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_white_background"
                        android:cursorVisible="true"
                        android:paddingLeft="@dimen/x5"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y35"
                        android:layout_marginLeft="@dimen/x3"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_get_verify_code_loan"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/y35"
                            android:layout_marginLeft="@dimen/x5"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_get_verify_code_loan_refresh"
                            android:layout_width="@dimen/y35"
                            android:layout_height="@dimen/y35"
                            android:layout_marginRight="@dimen/x5"
                            android:src="@drawable/refrash" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_loan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y35"
                android:layout_marginBottom="@dimen/y15"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y15"
                android:background="@drawable/shape_orange_large_round"
                android:text="提交申请"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>