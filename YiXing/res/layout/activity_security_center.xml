<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_normal_orange" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:text="个人资料"
        android:textColor="#2CCC9F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:id="@+id/ll_security_center_phone_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="@color/font_black" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/font_gray" />

        <TextView
            android:id="@+id/tv_security_center_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y33"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="证件信息"
            android:textColor="@color/font_black" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/font_gray" />

        <TextView
            android:id="@+id/tv_security_center_id_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y33"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y2"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y33"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="电子账户"
            android:textColor="@color/font_black" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/font_gray" />

        <TextView
            android:id="@+id/tv_security_center_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y33"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="收货地址"
            android:textColor="@color/font_black" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/font_gray" />

        <TextView
            android:id="@+id/tv_security_center_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@drawable/go_next"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/font_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y33"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:textColor="@color/font_black" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/font_gray" />

        <EditText
            android:id="@+id/et_security_center_address_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x8"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:text="安全信息"
        android:textColor="#2CCC9F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_security_center_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y35"
            android:layout_marginLeft="@dimen/x10"
            android:drawableRight="@drawable/go_next"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x8"
            android:text="登录密码"
            android:textColor="@color/font_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_security_center_payment_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y35"
            android:layout_marginLeft="@dimen/x10"
            android:drawableRight="@drawable/go_next"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x8"
            android:text="投资密码"
            android:textColor="@color/font_black" />
    </LinearLayout>

</LinearLayout>