<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginRight="@dimen/y5"
            android:layout_marginTop="@dimen/y10" >

            <TextView
                android:id="@+id/tv_item_transfering_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/shape_orange_large_round"
                android:paddingBottom="@dimen/y3"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/y3"
                android:text="转让详情"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toLeftOf="@id/tv_item_transfering_detail"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_item_transfering_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/transfer"
                    android:drawablePadding="@dimen/x5"
                    android:text="EXJR23588748789324778"
                    android:textColor="@color/font_black" />

                <TextView
                    android:id="@+id/tv_item_transfering_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"
                    android:singleLine="true"
                    android:text="国有担保-房产抵押借款"
                    android:textColor="@color/font_black" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_transfering_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/font_black"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转让金额( 元 )"
                android:textColor="@color/font_gray" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15"
            android:background="@color/bg_gray_divider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_transfering_had"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.33"
                android:textColor="@color/font_black"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已转让( 元 )"
                android:textColor="@color/font_gray" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15"
            android:background="@color/bg_gray_divider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_item_transfering_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/font_black"
                        android:textSize="19sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_item_transfering_tian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/font_black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_item_transfering_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/font_black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_item_transfering_xiaoshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小时"
                        android:textColor="@color/font_black" />

                    <TextView
                        android:id="@+id/tv_item_transfering_miniutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textColor="@color/font_black"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_item_transfering_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="@color/font_black" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余时间"
                    android:textColor="@color/font_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>